# -----------------------------------------------------------------------------
# Core application
# -----------------------------------------------------------------------------
NEXT_PUBLIC_APP_URL=http://localhost:3000

# -----------------------------------------------------------------------------
# Database
# -----------------------------------------------------------------------------
# Primary Postgres connection string
POSTGRES_URL=postgresql://user:password@localhost:5432/soraai
# Alternate variable name supported by some hosts (optional)
POSTGRESQL_URL=
# Set to "disable" to skip TLS verification (use only for local dev)
PGSSLMODE=require
# Set to "1" to enforce trusted certificates when PGSSLMODE != disable
PGSSL_ENFORCE_CERT=

# -----------------------------------------------------------------------------
# Better Auth configuration
# -----------------------------------------------------------------------------
# Generate with: npx @better-auth/cli@latest secret
BETTER_AUTH_SECRET=
# Public URL for callbacks (e.g. https://app.yourdomain.com)
BETTER_AUTH_URL=
# Optional: default role assigned to new users (admin|editor|user)
DEFAULT_USER_ROLE=user
# Set to "1" to allow non-HTTPS cookies in dev containers
NO_HTTPS=

# -----------------------------------------------------------------------------
# Authentication feature flags
# -----------------------------------------------------------------------------
# Set to "1" to disable email + magic link sign-in
DISABLE_EMAIL_SIGN_IN=
# Set to "1" to block new account self sign-up
DISABLE_SIGN_UP=

# -----------------------------------------------------------------------------
# OAuth providers (fill ID + secret to enable each provider)
# -----------------------------------------------------------------------------
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
# Set to "1" to always show the account chooser
GOOGLE_FORCE_ACCOUNT_SELECTION=

MICROSOFT_CLIENT_ID=
MICROSOFT_CLIENT_SECRET=
# Use "common" for multi-tenant apps or your tenant ID
MICROSOFT_TENANT_ID=common
# Set to "1" to always show the account chooser
MICROSOFT_FORCE_ACCOUNT_SELECTION=

# -----------------------------------------------------------------------------
# LLM providers and model endpoints (supply only the services you use)
# -----------------------------------------------------------------------------
OPENAI_API_KEY=
OPENAI_BASE_URL=https://api.openai.com/v1

ANTHROPIC_API_KEY=
GEMINI_API_KEY=
GROQ_API_KEY=
DEEPSEEK_API_KEY=
AIML_API_KEY=

XAI_API_KEY=
OPENROUTER_API_KEY=
GOOGLE_GENERATIVE_AI_API_KEY=

OLLAMA_BASE_URL=http://localhost:11434
LM_STUDIO_BASE_URL=http://localhost:1234
LEMONADE_BASE_URL=https://api.lemonade.ai/v1
LEMONADE_API_KEY=

# Optional default model for end-to-end tests (provider/model)
E2E_DEFAULT_MODEL=

# -----------------------------------------------------------------------------
# Search and integrations
# -----------------------------------------------------------------------------
# URL for your SearXNG instance
SEARXNG_API_URL=http://localhost:8080
# Optional Redis/Valkey backend for SearXNG rate limiting
SEARXNG_REDIS_URL=
# Secret used by SearXNG (overwrites server.secret_key)
SEARXNG_SECRET=
# Exa API key for web search enhancements (optional)
EXA_API_KEY=

# -----------------------------------------------------------------------------
# Caching & rate limiting (optional)
# -----------------------------------------------------------------------------
REDIS_URL=
REDIS_REST_URL=
REDIS_REST_TOKEN=

# -----------------------------------------------------------------------------
# File storage providers (optional)
# -----------------------------------------------------------------------------
# Choose one: vercel-blob | s3
FILE_STORAGE_TYPE=
FILE_STORAGE_PREFIX=uploads

# Vercel Blob
BLOB_READ_WRITE_TOKEN=

# S3-compatible storage
FILE_STORAGE_S3_BUCKET=
FILE_STORAGE_S3_REGION=
FILE_STORAGE_S3_ENDPOINT=
FILE_STORAGE_S3_PUBLIC_BASE_URL=
# Set to "1" to force path-style URLs
FILE_STORAGE_S3_FORCE_PATH_STYLE=

# AWS credentials are only needed when not using instance profiles
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_SESSION_TOKEN=
AWS_REGION=

# -----------------------------------------------------------------------------
# Misc configuration
# -----------------------------------------------------------------------------
# Set to "true" to disable the built-in default avatar generation
DISABLE_DEFAULT_AVATAR=
# Enable file-based MCP config instead of database storage
FILE_BASED_MCP_CONFIG=false
# Prevent adding new MCP servers when set ("1" to enforce)
NOT_ALLOW_ADD_MCP_SERVERS=
# Maximum runtime for MCP tool calls in milliseconds
MCP_MAX_TOTAL_TIMEOUT=

# -----------------------------------------------------------------------------
# UI feature toggles
# -----------------------------------------------------------------------------
# Set to "true" to display the chat model selector icon in the composer
MODEL_SELECTOR=false
# Set to "true" to display the search preference selector icon in the composer
SEARCH_PREFERENCE=false
# Set to "true" to display the Copilot toggle in the composer
COPILOT_TOGGLE=false
# Set to "true" (or 1) to show the Global region option in Discover
NEXT_PUBLIC_SHOW_GLOBAL_REGION=0
